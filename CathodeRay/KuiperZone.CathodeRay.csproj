<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>

    <Version>1.0.0</Version>
    <PackageId>KuiperZone.CathodeRay</PackageId>
    <Product>CathodeRay</Product>
    <Authors>Andy Thomas</Authors>
    <Copyright>Andy Thomas 2023</Copyright>
    <Company>KuiperZone</Company>
    <Description>A console user interface for dotnet</Description>
    <PackageTags>tui;console;terminal</PackageTags>
    <Language>en-US</Language>
    <PackageProjectUrl>https://github.com/kuiperzone/CathodeRay</PackageProjectUrl>
    <PackageLicenseExpression>LGPL-3.0-or-later</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
  </ItemGroup>

</Project>
